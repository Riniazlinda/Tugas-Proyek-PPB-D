<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/ungumuda"
    android:orientation="vertical"
    tools:context=".NoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/noteclose"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_close"/>

        <Button
            android:id="@+id/ubahdate"
            android:drawableRight="@drawable/ictimeline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="@string/changedate"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/colorputih"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tanggalnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:textSize="15dp"
        android:textColor="@color/putihtrans" />

    <TextView
        android:id="@+id/mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/whatmood"
        android:textColor="@color/colorputih"
        android:textSize="21dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/happy_btn"
            android:drawableTop="@drawable/icmood1"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Happy"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/good_btn"
            android:drawableTop="@drawable/icmood2"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Good"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/neutral_btn"
            android:drawableTop="@drawable/icmood3"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Neutral"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/bad_btn"
            android:drawableTop="@drawable/icmood4"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Bad"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/awful_btn"
            android:drawableTop="@drawable/icmood5"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Awful"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="12dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/skipnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/bgr_btn2"
        android:text="Skip"
        android:textColor="@color/colorputih"
        android:textSize="20dp"
        android:textAllCaps="false"/>

</LinearLayout>