<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/plusneg1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bgr_btn_plus1"
            android:layout_marginHorizontal="35dp"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/colorputih"/>

        <Button
            android:id="@+id/nega1_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="15dp"
            android:text="Sadness"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega2_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:text="Worry"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/nega3_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:text="Pity"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega4_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Panic"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega5_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Guilt"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/nega6_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:text="Gloat"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega7_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Anger"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega8_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Misery"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/nega9_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"

            android:layout_marginRight="5dp"
            android:text="Fear"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega10_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Jealously"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/nega11_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Emptiness"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

</LinearLayout>