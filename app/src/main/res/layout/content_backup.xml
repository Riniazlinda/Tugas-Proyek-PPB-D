<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/backgrthemes"
    tools:context=".BackupContent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reserv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="50dp"
        android:text="@string/reserve_copy"
        android:textColor="@color/colorputih"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon"
        android:src="@drawable/ic_person_hitam"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bgr_btnblue"/>



    <LinearLayout
        android:id="@+id/textview3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="180dp">
        <TextView
            android:id="@+id/gmbr22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/into"
            android:textColor="@color/blue"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textview4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="291dp">
        <TextView
            android:id="@+id/teks4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Create a reserve copy on Google Drive"
            android:textColor="@color/colorputih"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/gradient"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textview5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/teks5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="@string/restore_data"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorputih"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bgr_btnblue"/>
    </LinearLayout>

</LinearLayout>