<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Note1Activity"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/ungumuda">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/picday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/pictday"
        android:textColor="@color/colorputih"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/picsatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="1. What do you feel today?"
        android:textSize="17dp"
        android:textColor="@color/putihtrans"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Negative"
        android:textSize="15dp"
        android:textColor="@color/putihtrans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/neg1_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn3"
            android:layout_marginRight="10dp"

            android:text="Tiredness"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/neg2_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn3"
            android:layout_marginRight="10dp"
            android:text="Sadness"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/neg3_btn"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn3"
            android:layout_marginRight="10dp"
            android:text="Envy"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginVertical="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/neg4_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn3"
            android:layout_marginRight="10dp"

            android:text="Irritation"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/neg5_btn"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn3"
            android:layout_marginRight="10dp"
            android:text="Ire"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/plusneg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bgr_btn_plus1"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/colorputih"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Positive"
        android:textSize="15dp"
        android:textColor="@color/putihtrans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/pos1_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn4"
            android:layout_marginRight="10dp"
            android:text="Happiness"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/pos2_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn4"
            android:layout_marginRight="10dp"
            android:text="Transquility"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/pos3_btn"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn4"
            android:layout_marginRight="10dp"
            android:text="Love"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginVertical="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/pos4_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn4"
            android:layout_marginRight="10dp"
            android:text="Optimism"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/pos5_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn4"
            android:layout_marginRight="10dp"
            android:text="Inspiration"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/pluspos"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bgr_btn_plus2"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/colorputih"/>
    </LinearLayout>

    <TextView
        android:id="@+id/picdua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="2. What are you doing today?"
        android:textSize="17dp"
        android:textColor="@color/putihtrans"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/do1_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn5"
            android:layout_marginRight="10dp"
            android:text="Shopping"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/do2_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn5"
            android:layout_marginRight="10dp"
            android:text="Friends"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/do3_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn5"
            android:layout_marginRight="10dp"
            android:text="Family"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginVertical="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/do4_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn5"
            android:layout_marginRight="10dp"
            android:text="Sport"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/do5_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/bgr_btn5"
            android:layout_marginRight="10dp"
            android:text="Cleaning"
            android:textColor="@color/colorputih"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/plusdo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bgr_btn_plus3"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/colorputih"/>
    </LinearLayout>

    <Button
        android:id="@+id/noteadd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bgr_btnblue"
        android:text="@string/add_note"
        android:textColor="@color/colorputih"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/savepic_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bgr_btn6"
        android:text="@string/simpan"
        android:textColor="@color/colorputih"
        android:textSize="20dp"
        android:textAllCaps="false"/>


</LinearLayout>