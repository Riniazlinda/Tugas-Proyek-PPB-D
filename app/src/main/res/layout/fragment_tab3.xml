<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/plusdo1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bgr_btn_plus3"
            android:layout_marginHorizontal="35dp"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/colorputih"/>

        <Button
            android:id="@+id/doi1_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="15dp"
            android:text="Outdoors"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi2_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:text="Work"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/doi3_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:text="Party"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi4_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Reading"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi5_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Games"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/doi6_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:text="Dating"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi7_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Music"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi8_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Self Care"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/doi9_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"
            android:text="Movies"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi10_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="20dp"
            android:text="Hobby"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/doi11_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:text="Rest"
            android:textColor="@color/hitam"
            android:textAllCaps="false"
            android:textSize="13dp"/>

    </LinearLayout>

</LinearLayout>